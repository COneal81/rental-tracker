<h1> Login </h1>
     
    <%= form_for(:session, url: sessions_path(@user)) do |f| %>

        <div class="form_fields">
            <%= f.label :email %>
            <%= f.email_field :email %> 
        </div>

        <div class="form_fields">
            <%= f.label :password %>
            <%= f.password_field :password %><br>
        </div>


        <%= f.submit "Login" %>

    <% end %>
    <br><br>
 
    <p>Create Account</p>
<%= button_to "Sign Up", new_user_path, :method => "get", class: "btn btn-primary btn-sm" %>