<h1> Open Repair Tickets</h1><br>
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= button_to "Add a Repair", new_repair_path, :method=> "get", class: "btn btn-secondary btn-sm" %>&nbsp;
  </div><br><br>
     <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>Repair</th>
              <th>Property Name</th>
              <th>Rental Property Address</th>
              <th>Cost</th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <%@repairs.each do |repair|%>
            <%if repair.repair_completed == false %>
              <td><%= repair.id %></td>
              <td><%= link_to repair.repair_name, repair_path(repair)%>
              <td><%= repair.rental_property.property_name %></td>
              <td><%= repair.rental_property.address %></td>
              <td><%= repair.repair_cost %> </td>
            <%end%>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>