<h2>Available Properties</h2>
  <div class="btn-group" role="group" aria-label="Basic example">
    <%= button_to "Add a Property", new_user_rental_property_path(current_user), :method=> "get", class: "btn btn-secondary btn-sm" %>&nbsp;
  </div><br><br>
      <div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>#</th>
              <th>Property Name</th>
              <th>Address</th>
              <th>Monthly Rental Amount</th>
              <th>Deposit Amount</th>
              <th>Square Feet</th>
            </tr>
          </thead>
          <tbody>
            <tr>
            <%@rental_properties.each do |property|%>
              <td><%= property.id %></td>
              <td><%= link_to property.property_name, rental_property_path(property)%></td>
              <td><%= property.address %></td>
              <td>$<%= property.monthly_rental_amount %> </td>
              <td>$<%= property.deposit_amount%></td>
               <td><%= property.square_feet%></td>
            </tr>
            <%end%>
          </tbody>
        </table>
      </div>
    </main>
  </div>
</div>