<h1> All Rental Properties</h1><br>



<div class="row row-cols-1 row-cols-md-3">
<%= @rental_properties.each do |property|%>
  <div class="col mb-4">
    <div class="card h-100">
      <img src="<%=property.image_url%>" class="card-img-top" alt="...">
      <div class="card-body">
        <h5 class="card-title"><%= link_to property.property_name, rental_property_path(property)%></h5>
        <p class="card-text"><%=property.property_description%></p>
      </div>
    </div>
  </div>
  <%end%>
</div>





